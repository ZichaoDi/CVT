function vh = update (vH, res_prob)

%--------------------------------------------------------------
% Update to a larger problem
%

global X  N current_n

%--------------------------------------------------------------

j     = find(N==current_n);
xh    = X(1:N(j),j);
xH    = X(1:N(j+1),j+1);


vH_y=vH(1:N(j+1))
%%%%####

vh_y = interp1(xH,vH_y,xh);
return

